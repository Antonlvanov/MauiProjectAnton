<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectAnton.TimerPage"
             Title="TimerPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Spacing="20" VerticalOptions="Center">
            <Grid VerticalOptions="Center" HorizontalOptions="Center">
                <!-- Gradient background circle -->
                <Frame x:Name="gradientFrame"
                       WidthRequest="250"
                       HeightRequest="250"
                       CornerRadius="125"
                       Padding="0"
                       HasShadow="True">
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2196F3" Offset="0.1"/>
                            <GradientStop Color="#E91E63" Offset="0.9"/>
                        </LinearGradientBrush>
                    </Frame.Background>
                </Frame>

                <!-- Time display -->
                <Label x:Name="timerLabel"
                       Text="00:00:00"
                       FontSize="36"
                       FontAttributes="Bold"
                       FontFamily="Courier New"
                       TextColor="White"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center">
                    <Label.Shadow>
                        <Shadow Brush="#80000000" Offset="2,2" Radius="4"/>
                    </Label.Shadow>
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Invisible toggle button -->
                <Button x:Name="timer_btn"
                        Text=""
                        BackgroundColor="Transparent"
                        Clicked="timer_btn_Clicked"
                        WidthRequest="250"
                        HeightRequest="250"
                        CornerRadius="125"/>
            </Grid>
        </VerticalStackLayout>

        <HorizontalStackLayout 
            Grid.Row="1"
            Spacing="10"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Padding="10"
            BackgroundColor="Transparent">

            <Button 
                Text="Tagasi"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="10"
                Padding="20,10"
                Clicked="Liikumine">
                <Button.Shadow>
                    <Shadow Brush="#80000000" Offset="5,5" Radius="10" />
                </Button.Shadow>
            </Button>

            <Button 
                Text="Avaleht"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="10"
                Padding="20,10"
                Clicked="Liikumine">
                <Button.Shadow>
                    <Shadow Brush="#80000000" Offset="5,5" Radius="10" />
                </Button.Shadow>
            </Button>

            <Button 
                Text="Edasi"
                BackgroundColor="Black"
                TextColor="White"
                CornerRadius="10"
                Padding="20,10"
                Clicked="Liikumine">
                <Button.Shadow>
                    <Shadow Brush="#80000000" Offset="5,5" Radius="10" />
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>