<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectAnton.Valgusfoor"
             Title="Умный светофор"
             BackgroundColor="#1a1a1a">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="750" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Source="valgusfoorv3.jpg"
               Aspect="AspectFit"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"
               ZIndex="0"
               InputTransparent="True"/>

        <Frame Grid.Row="0"
               ZIndex="1"
               WidthRequest="411"
               HeightRequest="810"
               CornerRadius="50"
               BackgroundColor="Transparent"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HasShadow="True">

            <VerticalStackLayout Spacing="73"
                                 Padding="20"
                                 VerticalOptions="Center" 
                                 HorizontalOptions="Center">

                <Frame x:Name="RedLight"
                       WidthRequest="195"
                       HeightRequest="200"
                       CornerRadius="120"
                       BackgroundColor="Red"
                       Opacity="0.3"
                       ZIndex="1">
                    <Frame.Shadow>
                        <Shadow Brush="Red" Offset="0,0" Radius="20"/>
                    </Frame.Shadow>
                </Frame>

                <Frame x:Name="YellowLight"
                       WidthRequest="195"
                       HeightRequest="200"
                       CornerRadius="120"
                       BackgroundColor="Yellow"
                       Opacity="0.3"
                       ZIndex="1">
                    <Frame.Shadow>
                        <Shadow Brush="Yellow" Offset="0,0" Radius="20"/>
                    </Frame.Shadow>
                </Frame>

                <Frame x:Name="GreenLight"
                       WidthRequest="195"
                       HeightRequest="185"
                       CornerRadius="120"
                       BackgroundColor="LimeGreen"
                       Opacity="0.3"
                       ZIndex="1">
                    <Frame.Shadow>
                        <Shadow Brush="Lime" Offset="0,0" Radius="20"/>
                    </Frame.Shadow>
                </Frame>

            </VerticalStackLayout>
        </Frame>

        <HorizontalStackLayout Grid.Row="1"
                               ZIndex="2"
                               Padding="20"
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               InputTransparent="False">

            <Button x:Name="ControlButton"
                    WidthRequest="100"
                    HeightRequest="100"
                    CornerRadius="25"
                    ImageSource="playicon.png"
                    BackgroundColor="Transparent"
                    Clicked="ControlButton_Clicked"/>

        </HorizontalStackLayout>

    </Grid>
</ContentPage>